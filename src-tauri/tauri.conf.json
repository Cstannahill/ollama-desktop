{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ollama-desktop",
  "version": "0.1.0",
  "identifier": "com.christian.ollama-desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ollama-desktop",
        "width": 1200,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/llama_32x32.png",
      "icons/llama_128x128.png",
      "icons/llama_256x256.png",
      "icons/icon.icns",
      "icons/llama.ico"
    ]
  }
}
